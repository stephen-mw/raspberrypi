server {
	listen 8080;

	server_name example.com;

	root /var/www/html/;
    index index.html;

    location /ws {
        proxy_redirect off;
        proxy_pass http://0.0.0.0:8000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
    }
}
